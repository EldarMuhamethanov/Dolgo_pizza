{% extends 'base.html.twig' %}
{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="css/login.registration.css">
{% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
  <div class="container-fluid">
    {% include 'header.html.twig' with {'page': 'registration'} %}
    <div class="form">
      <h3 class="form_header registration_header">Регистрация</h3>
      {{ form_start(registrationForm) }}
      {{ form_row(registrationForm.name) }}
      {{ form_row(registrationForm.email) }}
      {{ form_row(registrationForm.password) }}
      {{  form_row(registrationForm.address) }}
      <input type="submit" value="Зарегистрироваться" class="submit_button" />
      {{ form_end(registrationForm) }}
    </div>
  </div>
{% endblock %}